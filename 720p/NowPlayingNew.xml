<?xml version="1.0"?>
<includes>
	<!-- custom Home screen Now Playing visuals -->
	<include name="nowplayinghome">
		<!-- NOW & NEXT PLAYING VISUALS -->
		<control type="group">
			<include>NowPlayingHomeLeftMenuSlide</include>
			<control type="group">
				<posx>890</posx>
				<posy>0</posy>				
				<visible>Player.HasMusicPlaylist</visible>
				<animation condition="!Player.Paused" type="Conditional">
					<effect type="rotatey" center="1085" start="-180" end="0" time="500" easing="out" reversible="false"/>
					<effect type="fade" start="50" end="90" time="250" delay="0"/>
				</animation>
				<animation condition="Player.Paused" type="Conditional">
					<effect type="rotatey" center="1085" start="0" end="-180" time="500" easing="out" reversible="false"/>
					<effect type="fade" start="90" end="50" time="250" delay="0"/>
				</animation>
				<!-- NEXT PLAYING -->
				<control type="group">
					<include condition="!Skin.HasSetting(showweatherwidget)">nowplayingwithoutweather</include>
					<include condition="Skin.HasSetting(showweatherwidget)">nowplayingwithweather</include>
					<visible>Player.HasMusicPlaylist + MusicPlayer.HasNext</visible>
					<!-- effects when closing/opening window -->
					<!-- no weather widget -->
					<animation type="WindowOpen" condition="!Skin.HasSetting(showweatherwidget)">
						<effect type="slide" start="0,-300" time="1000" tween="cubic" easing="out"/>
						<effect type="fade" start="0" end="60" time="3000" delay="100"/>
						<effect type="rotatex" center="200" start="-180" end="0" time="500" delay="2000" reversible="false"/>
					</animation>
					<!-- with weather widget -->
					<animation type="WindowOpen" condition="Skin.HasSetting(showweatherwidget)">
						<effect type="slide" start="0,-300" time="1000" tween="cubic" easing="out"/>
						<effect type="fade" start="0" end="60" time="3000" delay="100"/>
						<effect type="rotatex" center="345" start="-180" end="0" time="500" delay="2000" reversible="false"/>
					</animation>
					<animation type="WindowClose">
						<effect type="slide" start="0,0" end="0,-300" time="700" tween="cubic" easing="in"/>
						<effect type="fade" start="60" end="0" time="700"/>
					</animation>
					<!-- next playing informations -->
					<control type="group">
						<posx>210</posx>
						<posy>12</posy>
						<control type="label">
							<posy>-2</posy>
							<width>190</width>
							<font>qlassikSmallest</font>
							<textcolor>ivory3</textcolor>
							<label>$INFO[MusicPlayer.Offset(1).Artist]</label>
							<align>right</align>
						</control>
						<control type="label">
							<posy>21</posy>
							<width>190</width>
							<font>lobsterSmallest</font>
							<wrapmultiline>true</wrapmultiline>
							<textcolor>ivory3</textcolor>
							<label>$INFO[MusicPlayer.Offset(1).Title]</label>
							<align>right</align>
							<aligny>bottom</aligny>
						</control>
					</control>
					<!-- cover next playing -->
					<control type="group">
						<posx>211</posx>
						<posy>0</posy>
						<align>right</align>
						<!-- frame -->
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>174</width>
							<height>169</height>
							<aspectratio>stretch</aspectratio>
							<texture border="20">frames/bannerFrame.png</texture>
							<visible>MusicPlayer.HasNext</visible>
						</control>
						<!-- new cover -->
						<control type="image">
							<posx>23</posx>
							<posy>13</posy>
							<width>128</width>
							<height>128</height>
							<info>MusicPlayer.NextNewCover</info>
							<aspectratio>stretch</aspectratio>
							<visible>MusicPlayer.HasNewCoverNext</visible>
							<texture diffuse="frames/grainyframe.png"/>
						</control>
						<!-- if no new cover, then same cover -->
						<control type="image">
							<posx>23</posx>
							<posy>13</posy>
							<width>128</width>
							<height>128</height>
							<info>MusicPlayer.Cover</info>
							<aspectratio>stretch</aspectratio>
							<visible>!MusicPlayer.HasNewCoverNext</visible>
							<texture diffuse="frames/slideBigPosterMask.png"/>
						</control>
					</control>
				</control>
				<!-- CURRENTLY PLAYING -->
				<control type="group">
					<posy>345</posy>
					<posx>86</posx>
					<align>right</align>
					<!-- effects when closing/opening window -->
					<animation type="WindowOpen">
						<effect type="slide" start="400,0" time="1000" tween="cubic" easing="out"/>
						<effect type="fade" start="0" end="100" time="1500"/>
					</animation>
					<animation type="WindowClose">
						<effect type="slide" start="0,0" end="400,0" time="700" tween="cubic" easing="inout"/>
						<effect type="fade" start="100" end="0" time="1000"/>
					</animation>
					<!-- cover now playing -->
					<control type="group">
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>299</width>
							<height>299</height>
							<aspectratio>stretch</aspectratio>
							<texture border="20">frames/bannerFrame.png</texture>
							<animation effect="fade" start="60" end="80" time="0" condition="true">Conditional</animation>
						</control>
						<control type="image">
							<posx>25</posx>
							<posy>15</posy>
							<width>249</width>
							<height>249</height>
							<info>MusicPlayer.Cover</info>
							<aspectratio>scale</aspectratio>
							<texture diffuse="frames/slideBigPosterMask.png"/>
						</control>
					</control>
					<!-- now playing informations -->
					<control type="group">
						<posy>278</posy>
						<posx>275</posx>
						<visible>Player.HasMusicPlaylist</visible>
						<control type="label">
							<width>330</width>
							<font>qlassikSmallest</font>
							<textcolor>ivory3</textcolor>
							<label>$INFO[MusicPlayer.Artist]</label>
							<align>right</align>
						</control>
						<control type="label">
							<posy>20</posy>
							<width>350</width>
							<font>lobsterSmallest</font>
							<textcolor>greenlime</textcolor>
							<label>$INFO[MusicPlayer.Title]</label>
							<align>right</align>
						</control>
					</control>
					<!-- progress bar -->
					<control type="progress" id="21">
						<description>Progress bar</description>
						<posy>330</posy>
						<posx>20</posx>
						<height>1</height>
						<width>257</width>
						<info>Player.Progress</info>
						<texturebg>dialogs/progressBackground_.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="0">dialogs/progressSlider_.png</midtexture>
						<righttexture>-</righttexture>
						<animation effect="fade" start="0" end="100" time="1000">Visible</animation>
						<animation effect="fade" start="100" end="0" time="1000">Hidden</animation>
						<visible>Player.HasMusicPlaylist</visible>
					</control>
				</control>
			</control>
		</control>
	</include>
	<!-- end mod -->
</includes>
